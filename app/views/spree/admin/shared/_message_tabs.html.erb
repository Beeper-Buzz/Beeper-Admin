<% content_for :page_title do %>
  <%= link_to Spree.t(:messages), admin_products_path %> /
  <%= @message.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_messages_tabs">
    <%= content_tag :li, class: ('active' if current == :messages) do %>
      <%= link_to_with_icon 'edit', Spree.t(:messages), edit_admin_product_url(@product) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :message_support) do %>
      <%= link_to_with_icon 'edit', Spree.t(:message_support), edit_admin_product_url(@product) %>
    <% end if can?(:admin, Spree::Product) %>
  </ul>
<% end %>
